<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <!-- Base application theme. -->
    <style name="WakupTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/wk_primary</item>
        <item name="colorPrimaryDark">@color/wk_primary_dark</item>
        <item name="colorAccent">@color/wk_secondary</item>
        <item name="android:actionBarStyle">@style/WakupTheme.ActionBar.Default</item>
        <item name="android:actionMenuTextColor">@color/wk_appbar_text</item>
        <item name="android:windowBackground">@color/wk_background</item>
        <item name="android:textColor">@color/wk_main_text</item>
        <item name="android:textAppearance">@style/WakupTheme.Text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WakupTheme.ActionBarOverlay">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="WakupTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/wk_appbar_text</item>
        <item name="android:background">@color/wk_appbar_bg</item>
    </style>
    <style name="WakupTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <!-- Theme without ActionBar shadow (inherits main theme) -->
    <style name="WakupTheme.Root">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/WakupTheme.ActionBar.Root</item>
    </style>

    <style name="WakupTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="WakupTheme.Dialog" parent="WakupTheme.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <!-- ActionBar styles -->
    <style name="WakupTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/wk_appbar_bg</item>
        <item name="android:titleTextStyle">@style/WakupTheme.ActionBar.Title</item>
        <item name="android:logo">@drawable/wk_actionbar_logo</item>
        <item name="android:displayOptions">showHome|showTitle|useLogo|homeAsUp</item>
    </style>

    <style name="WakupTheme.ActionBar.Root">
        <item name="android:logo">@drawable/wk_actionbar_logo_root</item>
        <item name="android:displayOptions">showHome|showTitle|useLogo</item>
    </style>

    <style name="WakupTheme.ActionBar.Default">
    </style>

    <!-- ActionBar title text -->
    <style name="WakupTheme.ActionBar.Title"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/wk_appbar_text</item>
    </style>

    <style name="WakupTheme.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/wk_medium_text</item>
        <item name="android:textColor">@color/wk_main_text</item>
        <item name="fontPath">@string/wk_font_default</item>
    </style>

    <style name="WakupTheme.Text.Title">
        <item name="android:textSize">@dimen/wk_title_text</item>
        <item name="fontPath">@string/wk_font_bold</item>
        <item name="android:color">@color/wk_bold_text</item>
    </style>

    <style name="WakupTheme.Text.Italic">
        <item name="fontPath">@string/wk_font_italic</item>
    </style>

    <style name="WakupTheme.Text.Regular">
        <item name="fontPath">@string/wk_font_regular</item>
    </style>

    <style name="WakupTheme.Text.Bold">
        <item name="fontPath">@string/wk_font_bold</item>
    </style>

    <style name="WakupTheme.Text.OfferShortDesc">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/wk_offer_short_desc</item>
        <item name="android:background">@drawable/wk_offer_short_desc_bg</item>
        <item name="android:textSize">@dimen/wk_title_text</item>
        <item name="fontPath">@string/wk_font_short_offer</item>
    </style>

    <style name="WakupTheme.Text.SearchTitle">
        <item name="fontPath">@string/wk_font_regular</item>
    </style>

    <style name="WakupTheme.Text.SearchDetail">
        <item name="android:textSize">@dimen/wk_small_text</item>
        <item name="android:textColor">@color/wk_light_text</item>
    </style>

</resources>
